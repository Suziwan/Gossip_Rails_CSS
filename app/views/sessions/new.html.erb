<div class="container-fluid">
  <br>
  <h4> Connect to your account </h4>
  <br>
  <div class="my-form">
    <%= form_with url: sessions_path, scope: :session, local: true do |form| %>
      <div class="mb-3">
        <%= form.label :email %><br>
        <%= form.text_field :email, class: 'form-control' %>
      </div>
      <div class="mb-3">
        <%= form.label :password %><br>
        <%= form.password_field :password, class: 'form-control' %>
      </div>
      <div>
        <%= form.submit "Login", class: 'btn btn-success'%>
      </div>
    <% end %>
  </div>
  <p><br><br>
  You don't have an account yet ?
  <br><br>
  <a class="btn btn-primary" href="<%= new_user_path %>" role="button">Create account</a>
  </p>
</div>