<div class="container-fluid">
  <br>
  <h4>City of <%= @city.name %></h4><br>
    <div class="my-box">
      <p><strong>Name : </strong><%= @city.name %><br>
      <strong>Zip-code : </strong><%= @city.zip_code %><br>
    </div>
    <br>
    All gossips from this city :<br>
    <div class="row justify-content-center">
      <% @city_gossips.each do |gossip| %>
        <div class="card text-center col-sm-3 bg-secondary mb-3" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title">Gossip nยบ <%= gossip.id %><br></h5>
            <p class="card-text">
            Author : <%= User.find(gossip.user_id.to_i).first_name %> <%= User.find(gossip.user_id.to_i).last_name %><br>
            Title : <%= gossip.title %> <br><br>
            <a href="/gossips/<%= gossip.id %>/" class="btn btn-danger btn-outline-light" role="button">Learn more</a>
          </div>
        </div>
      <% end %>
    </div>
    <a href="/cities/">See all cities</a>
  </p>
</div>