<div class="container-fluid">
  <br>
  <h4>Create a new gossip here</h4><br>
  <div class="my-form">
    <%= form_tag url_for(action: 'create'), method: "post" do %>

    <%= label_tag 'Title :' %><br>
    <%= text_field_tag 'title', nil, size: 150 %>
    <br /> <br />

    <%= label_tag 'Content :' %><br>
    <%= text_area_tag 'content', nil, rows: 5 %>
    <br /> <br />

    <%= submit_tag "Save your gossip", class: 'btn btn-success'%>
    <% end %>
  </div>
</div>