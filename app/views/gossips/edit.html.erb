<div class="container-fluid">
  <br>
  <h4>Edit a gossip here</h4><br>
  <%= form_for @gossip do |f| %>

    <div class="form-group">
      <label>Title :</label>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <br>
    <div class="form-group">
      <label>Content :</label>
      <%= f.text_area :content, class: 'form-control' %>
    </div>
    <br>
    <div class="form-group">
      <button type="submit">Modify the gossip</button>
      <%= button_to 'Delete', gossip_path, method: :delete %>
    </div>
  <% end %>
</div>