<div class="container-fluid">
  <br>
  <h4>Profile of <%= @city.name %> city</h4><br>
    <p><strong>Name : </strong><%= @city.name %><br>
    <strong>Zip-code : </strong><%= @city.zip_code %><br>
    <strong>City ID : </strong><%= @city.id %><br>
    <br>
    All users from this city :<br>
    <div class="row justify-content-center">
      <% @city_users.each do |user| %>
        <div class="card text-center col-sm-3 bg-secondary mb-3" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title">User nº <%= user.id %><br></h5>
            <p class="card-text">
            First name : <%= user.first_name %><br>
            Last name : <%= user.last_name %><br><br>
            <a href="/users/<%= user.id %>/" class="btn btn-warning btn-outline-light" role="button">Profile</a>
          </div>
        </div>
      <% end %>
    </div>
    <br>
    All gossips from this city :<br>
    <div class="row justify-content-center">
      <% @city_gossips.each do |gossip| %>
        <div class="card text-center col-sm-3 bg-secondary mb-3" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title">Gossip nº <%= gossip.id %><br></h5>
            <p class="card-text">
            Author : <%= User.find(gossip.user_id.to_i).first_name %> <%= User.find(gossip.user_id.to_i).last_name %><br>
            Title : <%= gossip.title %> <br><br>
            <a href="/gossips/<%= gossip.id %>/" class="btn btn-danger btn-outline-light" role="button">Learn more</a>
          </div>
        </div>
      <% end %>
    </div>
  </p>
</div>